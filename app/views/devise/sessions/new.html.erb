<!--h2>Sign in</h2-->

<%= simple_form_for(resource, :html => {:class => 'well'}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign in", :class => 'btn' %>
  </div>
<% end %>

<%= render :partial => "authentications/shared/signup" %>
<%= render :partial => "devise/shared/links" %>